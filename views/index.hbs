<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Techno Sols</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/static/css/style.css">
</head>

<body>
  {{>navbar data=details}}
  {{>slider slides=slides}}






  {{!-- banneer1 section --}}

  <section class="banner1_section py-5">

    <div class="container background1 text-center">
      <div class="row">
        <div class="col-md-12">
          <h3>Start learning new technologies here</h3>
          <p>
            We are here to get you aquanted with new technologies which are currently used by big corporates!!!
          </p>
          <button class="btn btn-outline-primary" style="color:yellow ;">Start learning</button>
        </div>
      </div>
    </div>

  </section>







  {{!-- services section --}}



  <div class="container-fluid">
    <section id="services_section" class="py-4">

      <h1 class="text-center text-secondary">Services that we provide</h1>
      <div class="row">


        {{#each services}}
        {{!-- first service col --}}
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <div class="container text-center py-3">
                <i class="{{this.icon}} service_icon text-secondary"></i>
              </div>
              <h5 class="card-title">{{this.title}}</h5>
              <p>{{this.description}}</p>
              <a href="{{this.link}}">{{this.linkText}}</a>

            </div>
          </div>
        </div>
        {{/each}}
      </div>

    </section>



  {{!-- banner2-section --}}

    <section class="banner2_section py-5">

      <div class="row">
        <div class="col-md-6 text-center " style="color:grey ;">
          {{!-- left-side --}}
          <h3>
            <p>We are looking for people who are tech enthusiast and willing to devotesignificant amount of time for
              coding</p>
            <button class="btn btn-primary" style="background-color:violet ;">Click here</button>
          </h3>

        </div>
        <div class="col-md-6 text-center">
          {{!-- right-side --}}
          <img src="/static/images/slider2.png" style="height: 250px; " alt="">

        </div>

      </div>

    </section>









    {{!-- contact-us section --}}

    <section id="contact_us_section" class="py-5 background1">

      <div class="container">

        <h3 class="text-center text-secondary">Contact Us</h3>

        <div class="row">
          <div class="col md-12">

            <form action="/process-contact-form" method="post">

              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Your Email address</label>
                <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                  aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
              </div>


              <div class="mb-3">
                <label for="contactNumberField" class="form-label">Your contact number</label>
                <input name="phone" type="number" class="form-control" id="contactNumberField">
              </div>


              <div class="form-floating my-2">
                <textarea name="querry" class="form-control" placeholder="Enter your Query here" id="queryField"
                  style="height: 250px"></textarea>

              </div>




              <div class="container text-center">
                <button type="submit" class="btn btn-dark">Submit</button>
              </div>
            </form>


          </div>
        </div>
      </div>



  </div>


  </section>


{{!-- about section --}}

<section class="about_section py-5">
 <div class="container text-center">
   <div class="row">
    <div class="col-md-12">
      <h3>About this site</h3>
      <p>Keeping space for text</p>
      <button class="btn btn-success">Contact us</button>
    </div>
  </div>
 </div>
</section>


<footer class="footer">
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center p-4" style="background-color:seagreen ; height: 20px; width:100%;">
        2022 Copyright@
        <a class="tag" style="color:chartreuse; text-decoration:none" >ARE-Techno Solutions</a>
      </div>
    </div>
  </div>
</div>
</footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

</html>